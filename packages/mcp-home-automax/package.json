{
  "name": "mcp-home-automax",
  "version": "1.1.0",
  "description": "Model Context Protocol (MCP) server for home automation. Control lights, thermostats, locks, and more via AI with support for Home Assistant, MQTT, Zigbee2MQTT, and Z-Wave.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "home-automax-mcp": "index.js",
    "home-automax-setup": "setup.js"
  },
  "files": [
    "index.js",
    "setup.js",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "Dockerfile",
    ".dockerignore"
  ],
  "scripts": {
    "start": "node index.js",
    "build": "npx tsc",
    "test": "npm run build && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm test",
    "dev": "npx tsc --watch",
    "clean": "rm -rf src/**/*.js src/**/*.d.ts src/**/*.map *.js *.d.ts *.map",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "zod": "^4.1.12",
    "axios": "^1.7.0",
    "mqtt": "^5.10.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.5.12",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "home-automation",
    "home-assistant",
    "smart-home",
    "iot",
    "mqtt",
    "zigbee",
    "zigbee2mqtt",
    "zwave",
    "homelab",
    "ai",
    "claude",
    "chatgpt"
  ],
  "author": "Kody Dennon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KodyDennon/mcp-servers.git",
    "directory": "packages/mcp-home-automax"
  },
  "bugs": {
    "url": "https://github.com/KodyDennon/mcp-servers/issues"
  },
  "homepage": "https://github.com/KodyDennon/mcp-servers/tree/main/packages/mcp-home-automax#readme",
  "engines": {
    "node": ">=20.0.0"
  }
}
