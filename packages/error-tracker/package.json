{
  "name": "mcp-error-tracker",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for error tracking and observability. Integrates with Sentry, Datadog, New Relic, LogRocket, and Rollbar for AI-powered error analysis and debugging.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "error-tracker-mcp": "index.js",
    "error-tracker-setup": "setup.js"
  },
  "files": [
    "index.js",
    "setup.js",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "Dockerfile",
    ".dockerignore"
  ],
  "scripts": {
    "start": "node index.js",
    "build": "npx tsc",
    "test": "npm run build && jest",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "zod": "^4.1.12",
    "@sentry/node": "^7.100.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "error-tracking",
    "sentry",
    "datadog",
    "newrelic",
    "logrocket",
    "rollbar",
    "observability",
    "monitoring",
    "ai",
    "llm",
    "claude",
    "debugging"
  ],
