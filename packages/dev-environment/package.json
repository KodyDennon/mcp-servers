{
  "name": "mcp-dev-environment",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for local development environment orchestration. Manage runtime versions (nvm, pyenv, rbenv), local services (Docker, databases), and dev containers with AI assistance.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "dev-environment-mcp": "index.js",
    "dev-environment-setup": "setup.js"
  },
  "files": [
    "index.js",
    "setup.js",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "Dockerfile",
    ".dockerignore"
  ],
  "scripts": {
    "start": "node index.js",
    "build": "npx tsc",
    "test": "npm run build && jest",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "dotenv": "^17.2.3",
    "zod": "^4.1.12",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/node": "^24.10.1",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "dev-environment",
    "docker",
    "nvm",
    "pyenv",
    "rbenv",
    "devcontainer",
    "runtime",
    "database",
    "redis",
    "ai",
    "llm",
    "claude",
    "development"
  ],
  "author": "Kody Dennon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KodyDennon/mcp-servers.git",
    "directory": "packages/dev-environment"
  },
  "bugs": {
    "url": "https://github.com/KodyDennon/mcp-servers/issues"
  },
  "homepage": "https://github.com/KodyDennon/mcp-servers/tree/main/packages/dev-environment#readme",
  "engines": {
    "node": ">=20.0.0"
  }
}
