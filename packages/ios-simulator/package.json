{
  "name": "mcp-ios-simulator",
  "version": "0.2.1",
  "description": "Model Context Protocol server that exposes DevTools-like automation for the Xcode iPhone Simulator so AI agents can preview and test iOS experiences.",
  "type": "module",
  "main": "index.js",
  "bin": {
    "ios-simulator-mcp": "index.js",
    "ios-simulator-setup": "setup.js"
  },
  "files": [
    "index.js",
    "setup.js",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "README.md",
    "Dockerfile"
  ],
  "scripts": {
    "start": "node index.js",
    "build": "tsc",
    "test": "npm run build && jest",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ios",
    "simulator",
    "xcode",
    "devtools",
    "automation",
    "ai",
    "iphone"
