{
  "name": "mcp-servers",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Model Context Protocol (MCP) servers",
  "author": "Kody Dennon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KodyDennon/mcp-servers.git"
  },
  "bugs": {
    "url": "https://github.com/KodyDennon/mcp-servers/issues"
  },
  "homepage": "https://github.com/KodyDennon/mcp-servers#readme",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm exec prettier --check \"docs/**/*.{html,css,js,json}\" README.md",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx,jsx,css,md,mdx,json,yml,yaml,html}": "pnpm exec prettier --write"
  }
}
