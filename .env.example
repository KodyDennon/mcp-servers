# MCP Servers - Environment Variables
# Copy this file to .env and fill in your values

# ====================================
# Supabase DB MCP Server
# ====================================

# Required: PostgreSQL connection URL (non-pooling)
# Get this from: Supabase Dashboard -> Project Settings -> Database -> Connection String -> URI (non-pooling)
POSTGRES_URL_NON_POOLING=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Optional: Supabase URL (for Supabase-specific features)
# Get this from: Supabase Dashboard -> Project Settings -> API -> Project URL
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co

# Optional: Supabase Anon Key (for client operations)
# Get this from: Supabase Dashboard -> Project Settings -> API -> Project API keys -> anon public
SUPABASE_SECRET_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Optional: Supabase Service Role Key (for admin operations)
# Get this from: Supabase Dashboard -> Project Settings -> API -> Project API keys -> service_role
# WARNING: Keep this secret! It bypasses Row Level Security
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# MCP Mode: 'direct' for traditional tool calls, 'code-api' for code execution mode
# Code execution mode provides 98% token reduction and privacy-first data handling
MCP_MODE=direct

# ====================================
# iOS Simulator MCP Server (macOS only)
# ====================================

# Path to ios_webkit_debug_proxy binary
# Install with: brew install ios-webkit-debug-proxy
IOS_WEBKIT_PROXY_BINARY=/usr/local/bin/ios_webkit_debug_proxy

# Path to WebDriverAgent project (optional, for automation features)
# Clone from: https://github.com/appium/WebDriverAgent
WEBDRIVERAGENT_PROJECT_PATH=/path/to/WebDriverAgent

# ====================================
# OAuth / Authentication (Optional)
# ====================================

# OAuth Client ID (for OAuth flow)
OAUTH_CLIENT_ID=

# OAuth Client Secret (for OAuth flow)
OAUTH_CLIENT_SECRET=

# OAuth Redirect URI
OAUTH_REDIRECT_URI=http://localhost:3000/oauth/callback

# OAuth Authorization URL
OAUTH_AUTH_URL=

# OAuth Token URL
OAUTH_TOKEN_URL=

# ====================================
# Advanced Configuration
# ====================================

# Node environment
NODE_ENV=production

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Maximum query execution time (milliseconds)
MAX_QUERY_TIME=30000

# Maximum rows per query (0 for unlimited)
MAX_ROWS=10000

# Enable query caching
ENABLE_CACHE=true

# Cache TTL (seconds)
CACHE_TTL=300
